<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3440"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/station_name"
        android:textColor="#D8DEE9"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/compassImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stationName"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:scaleType="fitStart"
        android:src="@drawable/compass" />

    <LinearLayout
        android:id="@+id/windSpeedLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/compassImage"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/windSpeedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/wind_speed"
            android:textColor="#D8DEE9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/windSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="20sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#D8DEE9"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/windGustLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/windSpeedLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/windGustTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/wind_gust"
            android:textColor="#D8DEE9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/windGust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="40sp"

            android:fontFamily="sans-serif-black"
            android:textColor="#D8DEE9"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>